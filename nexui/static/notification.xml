<?xml version="1.0"?>
<?xml-stylesheet href="xsltforms1.5/build/xsl/xsltforms.xsl" type="text/xsl"?>
<?xsltforms-options debug="no"?>
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:f="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <head>
    <title>SCAP Notification (aka Wait For Event)</title>
    <f:model id="m1">
      <f:instance id="i0">
        <ScapiNotification xmlns="">
          <events/>
        </ScapiNotification>
      </f:instance>
      <f:instance xmlns="" id="i1">
        <notificationPrototype selected="languageSelection">
          <notification label="Language Selection">
            <languageSelection>
              <language>pl</language>
            </languageSelection>
          </notification>
          <notification label="Service Selection">
            <serviceSelection>
              <serviceId>
                <cardValidityCheck/>
              </serviceId>
            </serviceSelection>
          </notification>
          <notification label="Manual Entry" cvdDataPresent="false">
            <manualEntry>
              <pan/>
              <expirationDate>
                <year/>
                <month/>
              </expirationDate>
              <cvdData>
                <cvd/>
              </cvdData>
            </manualEntry>
          </notification>
        </notificationPrototype>
      </f:instance>
      <f:instance xmlns="" id="i2">
        <serviceType>
          <service label="Card Validity Check">
            <cardValidityCheck/>
          </service>
          <service label="Payment">
            <payment/>
          </service>
          <service label="Refund">
            <refund/>
          </service>
          <service label="Cancellation">
            <cancellation/>
          </service>
        </serviceType>
      </f:instance>
      <f:instance src="iso639.xml" id="i3"/>
      <f:bind ref="instance('i1')/notification/@cvdDataPresent" type="boolean"/>
      <f:bind ref="instance('i0')/events/manualEntry/cvdData" relevant="instance('i1')/notification/@cvdDataPresent=true()"/>
      <f:bind ref="instance('i0')/events/manualEntry/cvdData/cvd" type="decimal" constraint=". &lt; 1000" required="true()"/>
      <f:bind ref="instance('i0')/events/manualEntry/pan" type="card-number" constraint="is-card-number(.)" required="true()"/>
      <f:bind ref="instance('i0')/events/manualEntry/expirationDate/year" type="decimal" constraint=". &gt; 19 and . &lt; 100" required="true()"/>
      <f:bind ref="instance('i0')/events/manualEntry/expirationDate/month" type="decimal" constraint=". &lt; 13" required="true()"/>
      <f:submission id="s1" method="post" replace="all" resource="../nexo">
        <f:message level="modeless" ev:event="xforms-submit-error">Submit error</f:message>
      </f:submission>
    </f:model>
  </head>
  <body>
    <h3>SCAP Notification (aka Wait For Event)</h3>
    <f:group ref="instance('i1')">
      <f:select1 ref="@selected">
        <f:label>Notification: </f:label>
        <f:itemset nodeset="instance('i1')/notification">
          <f:label ref="@label"/>
          <f:value value="name(*[1])"/>
        </f:itemset>
      </f:select1>
      <f:trigger>
        <f:label>Add</f:label>
        <f:action ev:event="DOMActivate">
          <f:insert context="instance('i0')/events" nodeset="*" origin="instance('i1')/notification/*[name() = instance('i1')/@selected]"/>
        </f:action>
      </f:trigger>
      <f:submit submission="s1">
        <f:label>Submit</f:label>
      </f:submit>
      <hr/>
    </f:group>
    <f:repeat id="r1" nodeset="instance('i0')/events/*">
      <fieldset>
        <legend>
          <f:output value="name()"/>
        </legend>
        <f:group ref=".[name() = 'languageSelection']">
          <f:select1 ref="language">
            <f:label>ISO 639-1 code: </f:label>
            <f:itemset nodeset="instance('i3')/language">
              <f:label ref="@label"/>
              <f:value ref="@value"/>
            </f:itemset>
          </f:select1>
          <span> (<f:output value="language"/>)</span>
        </f:group>
        <f:group ref=".[name() = 'serviceSelection']">
          <f:select1 ref="serviceId">
            <f:label>Serivce Identifier: </f:label>
            <f:itemset nodeset="instance('i2')/service">
              <f:label ref="@label"/>
              <f:copy ref="./*"/>
            </f:itemset>
          </f:select1>
        </f:group>
        <f:group ref=".[name() = 'manualEntry']">
          <f:input ref="pan">
            <f:label>PAN: </f:label>
            <f:alert>Must have correct Luhn checksum</f:alert>
            <f:hint class="width-workaround">
              <span>Test credit card numbers:</span>
              <dl>
                <dt>VISA</dt>
                <dd>4485936516057131</dd>
                <dt>VISA Electron</dt>
                <dd>4917505187608015</dd>
                <dt>MasterCard</dt>
                <dd>5144061495831024</dd>
                <dt>Maestro</dt>
                <dd>5038218334590356</dd>
                <dt>Discover</dt>
                <dd>6011978759425573</dd>
                <dt>Diners Club</dt>
                <dd>30588293701510</dd>
                <dt>JCB</dt>
                <dd>3537208456619863956</dd>
                <dt>AmEx</dt>
                <dd>375493854861485</dd>
              </dl>
            </f:hint>
          </f:input>
          <f:group ref="expirationDate">
            <f:label>Expitation Date</f:label>
            <f:input ref="year">
              <f:label>Year: </f:label>
              <f:alert>2 digits from 20 to 99</f:alert>
            </f:input>
            <f:input ref="month">
              <f:label>Month: </f:label>
              <f:alert>2 digits from 1 to 12</f:alert>
            </f:input>
          </f:group>
          <f:input ref="instance('i1')/notification/@cvdDataPresent">
            <f:label>CVD Data</f:label>
            <f:hint>Is CVD presence information available before transaction?</f:hint>
          </f:input>
          <f:group ref="cvdData">
            <f:input ref="cvd">
              <f:label>CVD: </f:label>
              <f:alert>Must consist of 3 digits</f:alert>
            </f:input>
          </f:group>
        </f:group>
        <f:trigger>
          <f:label>Remove</f:label>
          <f:action ev:event="DOMActivate">
            <f:delete nodeset="."/>
          </f:action>
        </f:trigger>
      </fieldset>
    </f:repeat>
  </body>
</html>
